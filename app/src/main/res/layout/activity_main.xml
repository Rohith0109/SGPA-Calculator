<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#3254B6">



    <TextView
        android:id="@+id/msg"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:text="Remember the following values to calculate your grade"
        android:textSize="25sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/gradeTable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TableLayout
        android:id="@+id/gradeTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow>

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:background="#505050"
                android:textColor="#ffffff"
                android:padding="5dp"
                android:text="Points"
                android:textAlignment="center"
                android:textSize="30sp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:background="#505050"
                android:textColor="#ffffff"
                android:padding="5dp"
                android:text="Grade"
                android:textAlignment="center"
                android:textSize="30sp" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:background="#ffffff"
                android:textColor="#000000"
                android:padding="5dp"
                android:text="10"
                android:textAlignment="center"
                android:textSize="30sp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:background="#ffffff"
                android:textColor="#000000"
                android:padding="5dp"
                android:text="O"
                android:textAlignment="center"
                android:textSize="30sp" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:background="#ffffff"
                android:textColor="#000000"
                android:padding="5dp"
                android:text="9"
                android:textAlignment="center"
                android:textSize="30sp" />

            <TextView
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:background="#ffffff"
                android:textColor="#000000"
                android:padding="5dp"
                android:text="S"
                android:textAlignment="center"
                android:textSize="30sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:background="#ffffff"
                android:textColor="#000000"
                android:padding="5dp"
                android:text="8"
                android:textAlignment="center"
                android:textSize="30sp" />

            <TextView
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:background="#ffffff"
                android:textColor="#000000"
                android:padding="5dp"
                android:text="A"
                android:textAlignment="center"
                android:textSize="30sp" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:background="#ffffff"
                android:textColor="#000000"
                android:padding="5dp"
                android:text="7"
                android:textAlignment="center"
                android:textSize="30sp" />

            <TextView
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:background="#ffffff"
                android:textColor="#000000"
                android:padding="5dp"
                android:text="B"
                android:textAlignment="center"
                android:textSize="30sp" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:background="#ffffff"
                android:textColor="#000000"
                android:padding="5dp"
                android:text="6"
                android:textAlignment="center"
                android:textSize="30sp" />

            <TextView
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:background="#ffffff"
                android:textColor="#000000"
                android:padding="5dp"
                android:text="C"
                android:textAlignment="center"
                android:textSize="30sp" />

        </TableRow>

        <TableRow android:layout_marginBottom="5dp">

            <TextView
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:background="#ffffff"
                android:textColor="#000000"
                android:padding="5dp"
                android:text="5"
                android:textAlignment="center"

                android:textSize="30sp" />

            <TextView
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:background="#ffffff"
                android:textColor="#000000"
                android:padding="5dp"
                android:text="D"
                android:textAlignment="center"
                android:textSize="30sp" />

        </TableRow>

    </TableLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textSize="25sp"
        android:layout_margin="10dp"
        android:backgroundTint="#FD2C32"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>